<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_back"
    android:id="@+id/main_window">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/ad_unit_id"/>

    <ImageView
        android:layout_width="270dp"
        android:layout_height="153dp"
        android:id="@+id/logo"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/gamelogo"
        android:src="@drawable/logo"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:id="@+id/arcadeButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/button1_arcade" />

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:id="@+id/timeSprintButton"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/button2_timesprint" />

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:id="@+id/timeAttackButton"
        android:singleLine="false"
        android:padding="5dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/button3_timeattack" />

    <Space
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/miniHolder"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="75dp"
            android:layout_height="48dp"
            android:background="@drawable/button_info"
            android:id="@+id/infoButton"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:layout_weight="1" />

        <Button
            android:layout_width="75dp"
            android:layout_height="48dp"
            android:background="@drawable/button_crown"
            android:id="@+id/playServicesButton"
            android:layout_gravity="right"
            android:layout_weight="1" />

        <Button
            android:layout_width="75dp"
            android:layout_height="48dp"
            android:background="@drawable/button_voice"
            android:id="@+id/soundButton"
            android:layout_marginLeft="15dp"
            android:layout_weight="1" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:id="@+id/bottomPic"
        android:layout_gravity="center_horizontal|bottom"
        android:contentDescription="@string/bottomPic"
        android:layout_marginTop="-35dp"
        android:src="@drawable/mountains" />

</LinearLayout>