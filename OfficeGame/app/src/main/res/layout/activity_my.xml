<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gradient"
    tools:context=".MyActivity">

    <Button
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:background="@drawable/button4_pic"
        android:id="@+id/chooseButton"
        android:layout_marginTop="120dp"
        android:layout_below="@+id/tileMuteButton"
        android:layout_alignLeft="@+id/exitButton"
        android:layout_alignStart="@+id/exitButton" />

    <Button
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:background="@drawable/button6_pic"
        android:id="@+id/exitButton"
        android:layout_below="@+id/aboutGameAndDevButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tileMute"
        android:background="@drawable/button_custom"
        android:id="@+id/tileMuteButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:background="@drawable/button5_pic"
        android:id="@+id/aboutGameAndDevButton"
        android:layout_toStartOf="@+id/tileMuteButton"
        android:layout_below="@+id/chooseButton"
        android:layout_alignRight="@+id/chooseButton"
        android:layout_alignEnd="@+id/chooseButton" />

    <Button
        android:layout_width="280dp"
        android:layout_height="65dp"
        android:id="@+id/button"
        android:background="@drawable/button7_pic"
        android:layout_below="@+id/tileMuteButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:background="@drawable/lk"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
